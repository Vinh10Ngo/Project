<% inputHelper = (type = 'text', name, value, params = {}) => {
    let id = ''
    if (params.hasOwnProperty('id') && params['id'] !== undefined) {
        id = `id="${params.id}"`
    }
    if(value == undefined) value = ''
     let xHtmlResult = `<input type="${type}" ${id} name="${name}" value="${value}" class="form-control form-control-sm">
     ` 
    return xHtmlResult
}    
%>




