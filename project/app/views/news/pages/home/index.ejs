<% include ./../../helper/format-time%>
<% include ./../../helper/show-category-in-home%>

<%
const uploadPath = '/uploads/article/'

const url = `/${systemConfigs.prefixNews}/`;

const cleanedURL = url.replace(/\/+/g, '/');

%>
    <!-- Headline -->   
    <div class="container">
		<div class="bg0 flex-wr-sb-c p-rl-20 p-tb-8">
			<div class="f2-s-1 p-r-30 size-w-0 m-tb-6 flex-wr-s-c">
			</div>

            <% include ./../../elements/search%>

		</div>
	</div>
<!-- Feature post -->
<section class="bg0">
    <div class="container">
        <div class="row m-rl--1">
            <div class="col-md-6 p-rl-1 p-b-2">
                <div class="bg-img1 size-a-3 how1 pos-relative" style="background-image: url('<%= uploadPath + itemsSpecial[0].thumb%>');">
                    <a href="<%=cleanedURL%>blog-detail/<%= itemsSpecial[0].id%>" class="dis-block how1-child1 trans-03"></a>

                    <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                        <a href="<%=cleanedURL%>category/<%= itemsSpecial[0].category.id%>" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
                            <%= itemsSpecial[0].category.name%>
                        </a>

                        <h3 class="how1-child2 m-t-14 m-b-10">
                            <a href="<%=cleanedURL%>blog-detail/<%= itemsSpecial[0].id%>" class="how-txt1 size-a-6 f1-l-1 cl0 hov-cl10 trans-03">
                                <%= itemsSpecial[0].name%>
                            </a>
                        </h3>

                        <span class="how1-child2">
                            <span class="f1-s-4 cl11">
                                <%= itemsSpecial[0].created.user_name%>
                            </span>

                            <span class="f1-s-3 cl11 m-rl-3">
                                -
                            </span>

                            <span class="f1-s-3 cl11">
                                <%- formatTimeHelper (itemsSpecial[0].created.time) %>
                            </span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-md-6 p-rl-1">
                <div class="row m-rl--1">
                    <div class="col-12 p-rl-1 p-b-2">
                        <div class="bg-img1 size-a-4 how1 pos-relative" style="background-image: url('<%= uploadPath + itemsSpecial[1].thumb%>');">
                            <a href="<%=cleanedURL%>blog-detail/<%= itemsSpecial[1].id%>" class="dis-block how1-child1 trans-03"></a>

                            <div class="flex-col-e-s s-full p-rl-25 p-tb-24">
                                <a href="<%=cleanedURL%>category/<%= itemsSpecial[1].category.id%>" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
                                    <%= itemsSpecial[1].category.name%>
                                </a>

                                <h3 class="how1-child2 m-t-14">
                                    <a href="<%=cleanedURL%>blog-detail/<%= itemsSpecial[1].id%>" class="how-txt1 size-a-7 f1-l-2 cl0 hov-cl10 trans-03">
                                        <%= itemsSpecial[1].name%>
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <% for(let i = 2; i < itemsSpecial.length; i++) { %>
                    <div class="col-sm-6 p-rl-1 p-b-2">
                        <div class="bg-img1 size-a-5 how1 pos-relative" style="background-image: url('<%= uploadPath + itemsSpecial[i].thumb%>');">
                            <a href="<%=cleanedURL%>blog-detail/<%= itemsSpecial[i].id%>" class="dis-block how1-child1 trans-03"></a>

                            <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                                <a href="<%=cleanedURL%>category/<%= itemsSpecial[i].category.id%>" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2">
                                    <%= itemsSpecial[i].category.name%>

                                </a>

                                <h3 class="how1-child2 m-t-14">
                                    <a href="<%=cleanedURL%>blog-detail/<%= itemsSpecial[i].id%>" class="how-txt1 size-h-1 f1-m-1 cl0 hov-cl10 trans-03">
                                        <%= itemsSpecial[i].name%>
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Post -->
<section class="bg0 p-t-70">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="p-b-20">
                    <!-- Entertainment -->
                    <%-showCategoryInHomeHelper(categoryInIndex, allArticle, cleanedURL, uploadPath) %>
                </div>
            </div>

            <div class="col-md-10 col-lg-4">
                <div class="p-l-10 p-rl-0-sr991 p-b-20" id="coinPriceTableContainer">
                    <!--  -->
                    <% include ./../../elements/most-popular%>

                    <!--  -->  
                    <% include ./../../elements/coin-price%>                 
                    <!--  -->
                    <% include ./../../elements/gold-price%>                 
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner -->

<!-- Latest -->
<section class="bg0 p-t-60 p-b-35">
    <div class="container">
        <div class="row">       
            <div class="col-md-10 col-lg-8 p-b-20 text-left">
                <div class="how2 how2-cl4 flex-s-c m-r-10 m-r-0-sr991">
                    <h3 class="f1-m-2 cl3 tab01-title">
                        Latest Articles
                    </h3>
                </div>
            
                <div class="row p-t-35">
                    <% for (let i = 0; i < itemsLatest.length; i++) { %>
                    <div class="col-sm-6 p-r-25 p-r-15-sr991">
                        <!-- Item latest -->	
                        <div class="m-b-45">
                            <a href="<%=cleanedURL%>blog-detail/<%= itemsLatest[i].id%>" class="wrap-pic-w big-image hov1 trans-03">
                                <img src="<%= uploadPath + itemsLatest[i].thumb%>" alt="<%= itemsLatest[i].thumb%>">
                            </a>
            
                            <div class="p-t-16">
                                <h5 class="p-b-5">
                                    <a href="<%=cleanedURL%>blog-detail/<%= itemsLatest[i].id%>" class="f1-m-3 cl2 hov-cl10 trans-03 clamp-text">
                                        <%= itemsLatest[i].name%> 
                                    </a>
                                </h5>
            
                                <span class="cl8">
                                    <%= itemsLatest[i].created.user_name%>            
                                    <span class="f1-s-3 m-rl-3">
                                        -
                                    </span>
            
                                    <span class="f1-s-3">
                                        <%- formatTimeHelper (itemsLatest[i].created.time) %>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <% } %> 

                </div>
            </div>
            <div class="col-md-10 col-lg-4">
                <div class="p-l-10 p-rl-0-sr991 p-b-20">
                    <!-- Video -->
                        
                    <!-- Subscribe -->
                    
                    <!-- Tag -->
                    <% include ./../../elements/tag%>
                </div>
            </div>
            <% if (userId) { %>
            <div class="col-md-10 col-lg-8 p-b-20 text-left" id="recentlyViewedPostsListForUser" data-user-id="<%= userId%>" data-clean-url="<%= cleanedURL%>">
            </div>
            <% } %>
           
        </div>
    </div>
</section>
